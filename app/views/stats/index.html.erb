
<div>
  <div class="col-sm-4 text-center">
    <%= image_tag 'golf-2.png', class: 'icons' %>
    <br />
    <h4>Play golf!</h4>
  </div>
  <div class="col-sm-4 text-center">
    <%= image_tag 'analytics.png', class: 'icons' %>
    <br />
    <h4>Track your stats!</h4>
  </div>
  <div class="col-sm-4 text-center">
    <%= image_tag 'hole.png', class: 'icons' %>
    <br />
    <h4>Start Improving!</h4>
  </div>
</div>


<div class="leaderboard col-xs-10 col-xs-offset-1">
  <h2 class="text-center">Latest Scores</h2>
    <hr />
    <div class="col-xs-4 text-center">
      <h3>Name</h3>
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.user.name %></h4>
      <% end %>
    </div>
    <div class="col-xs-4 text-center">
      <h3>Course</h3>
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.course %></h4>
      <% end %>
    </div>
    <div class="col-xs-4 text-center">
      <h3>Score</h3>
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.score %></h4>
      <% end %>
    </div>
</div>


<div class="responsive-scale"></div>
<h3 class="text-center">Saguaro  |  Wekopa - We-Ko-Pa Golf Club</h3>
<div class="leaderboard col-xs-10 col-xs-offset-1">
  <h2 class="text-center">Last 10 Member Scores</h2>
    <hr />
    <div class="col-xs-4 text-center">
      <h3>Name</h3>
      --------------
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.user.name %></h4>
      <% end %>
    </div>
    <div class="col-xs-4 text-center">
      <h3>Course</h3>
      --------------
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.course %></h4>
      <% end %>
    </div>
    <div class="col-xs-4 text-center">
      <h3>Score</h3>
      --------------
      <br />
      <% @rounds.each do |round| %>
      <h4><%= round.score %></h4>
      <% end %>
    </div>
</div>


<div class="col-xs-12 splitter">
  <div class="last-stat col-xs-12">
      <div class="col-xs-12 info">
        <h3>- Latest Posts -</h3>
          <% @messages.each do |message| %>
          <div class="comment">
            <span class="comment_handle">
              <%=message.created_at.strftime("%m-%d-%Y") %> | <%= message.user.name %> -
            </span>
           " <%= message.message %> "
          </div>
        <% end %>
      </div>
  </div>

  <div class="col-xs-12 messages">
    <%= simple_form_for Message.new do |f| %>
    <%= f.error_notification %>
      <%= f.input :message, required: true %>
      <br />
      <%= f.submit 'Add Message', class: 'btn btn-primary msgbtn' %>
      <% end %>
  </div>


</div>

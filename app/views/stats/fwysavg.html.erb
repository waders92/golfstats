<div id="fwys" class="col-xs-8 col-xs-offset-2 member-stats">
  <h2>Fairways Average</h2>
  <br />
  <table class="table1">
    <tr class="table-title">
      <th>Rank</th>
      <th>Name</th>
      <th>Avg</th>
      <th>Rnds</th>
    </tr>
  <% fairways_rank_with_index do |(user, avg), i| %>
    <tr class="text-center">
      <td><%= i %></td>
      <td><%= user.name %></td>
      <td><%= avg.round(2) %></td>
      <td><%= user.total_rounds %></td>
    </tr>
  <% end %>
  </table>
</div>
<div class="col-xs-12 text-center linkavg fitz">
  <%= link_to 'Scoring Avg', scoringavg_path, class: 'btn btn-default' %>
  <%= link_to 'Greens Avg', greensavg_path, class: 'btn btn-default' %>
  <%= link_to 'Putts Avg', puttsavg_path, class: 'btn btn-default' %>
  <%= link_to 'Birdie Avg', birdieavg_path, class: 'btn btn-default' %>
  <%= link_to 'Par Avg', paravg_path, class: 'btn btn-default' %>
</div>

<br /><br />
  <div class="container">
   <% if current_user.rounds.present? %>
    <h2>18 Hole History</h2>
    <p class="info">
      Rounds Played: <%= current_user.rounds.count %>
    </p>
    <div>
      <div class="col-xs-4">
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#scoring">
          Scoring Average<br />
          <%= current_user.scoring_average_rounded %>
        </button><br /><br />
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#fairways">
          Fairways Hit Average<br />
          <%= current_user.fwys_hit_average_rounded %>
        </button><br /><br />
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#greens">
          Green's Hit Average<br />
          <%= current_user.greens_hit_average_rounded %>
        </button>
      </div>
      <div class="col-xs-2"></div>
      <div class="col-xs-4">
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#putting">
          Putting Average<br />
          <%= current_user.putting_average_rounded %>
        </button><br /><br />
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#birdies">
          Birdie Average<br />
          <%= current_user.birdie_average_rounded %>
        </button><br /><br />
        <button type="button" class="btn btn-default" style="width: 200px; height: 50px;" data-toggle="modal" data-target="#pars">
          Par Average<br />
          <%= current_user.par_average_rounded %>
        </button>
      </div>
      <% end %>
    </div>
  <br class="clr" />
  <br /><br /><br />
  <% if current_user.rounds.present? %>
  <div class="linkavg">
    <%= link_to 'Post 18 Hole Score', new_round_path, class: 'btn btn-default' %>
  </div>
  <hr />
  </div>
  <br class="clr" />
  <% @monthly_rounds.each do |month, round| %>
 <h2 class="text-center"><%= month %></h2>
   <div id="redirect">
     <table class="col-xs-10 col-xs-offset-1 table2">
       <tr class="table-title">
         <th>Date</th>
         <th>Course</th>
         <th>Score</th>
         <th>Greens</th>
         <th>Fwys</th>
         <th>Putts</th>
         <th>Birdies</th>
         <th>Pars</th>
       </tr>
       <tr class="text-center">
         <% round.each do |round| %>
         <td class="text-center"><%= round.created_at.strftime('%_m/%-d') %>&nbsp;&nbsp;&nbsp;<%= link_to(image_tag("mag.png", class: 'pencil'), round_path(round)) %></td>
         <td class="text-center"><%= round.course %></td>
         <% if round.public == true %>
         <td class="text-center"><%= round.score %></td>
         <% else %>
         <td class="text-center private"><%= round.score %></td>
         <% end %>
         <td class="text-center"><%= round.greens %></td>
         <td class="text-center"><%= round.fwys %></td>
         <td class="text-center"><%= round.putts %></td>
         <td class="text-center"><%= round.birdies %></td>
         <td class="text-center"><%= round.pars %></td>
       </tr>
   <% end %>
   </table>
   <br class="clr" />
   <% end %>

  <% else %>
    <div class="col-xs-6 col-xs-offset-3 text-center fitz">
      <h2>You need to enter a round to see your stats!</h2>
      <div class="linkavg text-center">
        <%= link_to 'Post 18 Hole Score', new_round_path, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>


<!-- Scoring Average Modal -->
<div class="modal fade" id="scoring" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Scoring By Course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <% current_user.rounds.each do |round| %>
      <%= round.created_at.strftime('%_m/%-d') %> <%= round.course %> - <%= round.score %>
      <br />
      <% end %>
      <br />
      <hr />
      <h5>Low Round</h5>
      <%= current_user.users_best_score %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="col-xs-6 col-xs-offset-3 text-center bottom big-box3">
  <h2>Video Lessons</h2>
  <%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
      <% end %>
      <label class="amount">
        <span class="cost">Amount: $30.00</span>
      </label>
    </article>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="TrakStats Video Lesson"
      data-amount="3000"
      data-locale="auto"></script>
      <% end %>
      <br />
</div>
<br class="clr" />
<div class="top bottom">
  <div class="col-xs-3 bottom vids">
    <%= image_tag 'swing2.PNG', class:'img-responsive' %>
  </div>

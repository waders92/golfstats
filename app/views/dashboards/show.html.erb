
<div class="leaderboard col-xs-10 col-xs-offset-1">
  <h1><%= current_user.name %></h1>
  <h5>Member since: <%=current_user.created_at.strftime("%m/%d/%Y") %></h5>
  <h2 class="text-center">Latest Scores</h2>
  <hr />
    <div class="col-xs-6 text-center">
      <h3>Course</h3>
      <br />
      <% current_user.rounds.each do |round| %>
        <h4><%= round.course %></h4>
        <% end %>
    </div>
    <div class="col-xs-6 text-center">
      <h3>Score</h3>
      <br />
      <% current_user.rounds.each do |round| %>
        <h4><%= round.score %>&nbsp;&nbsp;<%= link_to 'Edit', edit_round_path(round) , class: 'btn btn-primary btn-xs' %>&nbsp; &nbsp<%= link_to 'Erase', round_path(round), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-xs' %></h4>
      <% end %>
    </div>
    <h3 class="text-center">Scoring Average</h3></h3>
    <br />

    <p class="text-center big-score"><%= current_user.scoring_average %></p>

</div>

<br class="clr" />

<br /><br />
    <div class="text-center col-xs-6 col-xs-offset-3">
      <%= image_tag 'user.png', class: 'user' %>
      <h1><%= current_user.name %></h1>
      <h5>Member since: <%=current_user.created_at.strftime("%m/%d/%Y") %></h5>
      <hr class="hr2 top" />
    </div>
  <br class="clr" />
  <% if current_user.rounds.present? %>
  <div class="container">
    <div class="col-xs-6 top">
      <p class="info">Total Rounds : <%= current_user.total_rounds %></p>
      <br />
      <p class="info">Scoring Average-<%= current_user.scoring_average_rounded %></p>
      <p class="info">Green's Percentage-<%= current_user.greens_hit_average_rounded %>%</p>
      <p class="info">Driving Accuracy-<%= current_user.fwys_hit_average_rounded %>%</p>
      <p class="info">Putting Average-<%= current_user.putting_average_rounded %></p>
      <p class="info">Birdie Average-<%= current_user.birdie_average_rounded %></p>
      <p class="info">Par Average-<%= current_user.par_average_rounded %></p>
    </div>
    <div class="col-xs-6 top">
      <p class="info">Personal Bests</p>
      <br />
    <p class="info">Score-<%= current_user.users_best_score %></p>
    <p class="info">Greens Hit-<%= current_user.users_best_greens %></p>
    <p class="info">Fairways Hit-<%= current_user.users_best_fairways %></p>
    <p class="info">Putts-<%= current_user.users_best_putting_round %></p>
    <p class="info">Birdies-<%= current_user.users_best_birdie_total %></p>
    <p class="info">Pars-<%= current_user.users_best_par_total %></p>
    </div>
    <br class="clr" />
    <div class="col-xs-10 top bottom">
      <%= link_to '<button type="button">Add Round</button>'.html_safe, new_round_path %>
      <br />
      <% @yearly_rounds.each do |year, round| %>
      <br />
      <p class=" info"><%= year %></p>
        <div>
          <table class="col-xs-6">
            <tr class="table-title">
              <th>Date</th>
              <th>Course</th>
              <th>Score</th>
              <th class="red">Edits</th>
            </tr>
            <tr class="text-center">
              <% round.sort.each do |round| %>
              <td class="text-center"><%= round.created_at.strftime('%_m/%-d') %></td>
              <td class="text-center"><%= round.course %></td>
              <td class="text-center"><%= link_to round.score, round_path(round) %></td>
              <td class="text-center"><%= link_to(image_tag("edit.png", class: 'pencil'), edit_round_path(round), class: 'pencil') %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to(image_tag("trash.png", class: 'trash'), round_path(round), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}) %></td>
            </tr>
        <% end %>
        </table>
        <br class="clr" />
        <% end %>
      </div>
    </div>
  </div>


  <% else %>
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <h2>You need to enter a round to see your stats!</h2>
    </div>
  <% end %>
    <br class="clr" />

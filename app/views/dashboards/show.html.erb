        <% end %>
    </div>

    <div class="col-sm-6 text-center push">
      <h3>Greens Hit</h3>
      --------------
      <br />
      <% current_user.rounds.each do |round| %>
      <h4><%= round.greens %> / <%= round.greenstotal %></h4>
      <% end %>
    </div>


    <div class="col-xs-10 col-xs-offset-1">
      <!-- <h3 class="text-center">Greens Recap</h3> -->
      <%= bar_chart current_user.rounds.group(:course).average(:greens), colors: ["#0990BD"] %>
      <br />
    </div>
</div>

<br class="clr" />


<br /><br />
<div class="text-center col-xs-6 col-xs-offset-3">
  <h1><%= current_user.name %></h1>
  <h5>Member since: <%=current_user.created_at.strftime("%m/%d/%Y") %></h5>
</div>

<div class="leaderboard-show col-xs-10 col-xs-offset-1">
  <div class="col-xs-12 text-center">
    <h1 class="text-center">Scoring Average</h1>
    --------------
  <br />
  </div>
  <p class="text-center big-score"><%= current_user.scoring_average_rounded %></p>
  <br />

    <div class="col-sm-6">
      <h3>Latest Rounds</h3>
      --------------
      <br />
      <% current_user.rounds.each do |round| %>
        <h4 class="score-handle"><%= link_to 'Edit', edit_round_path(round) , class: 'btn btn-primary btn-xs' %>&nbsp;&nbsp;&nbsp;&nbsp;<%= round.created_at.strftime("%m/%y") %>&nbsp;&nbsp;<%= round.course %></h4>
        <% end %>
    </div>
    <div class="col-sm-6 text-center push">
      <h3>Score</h3>
      --------------
      <br />
      <% current_user.rounds.each do |round| %>
      <h4><%= round.score %></h4>
      <% end %>
    </div>


    <div class="col-xs-10 col-xs-offset-1">
      <h3 class="text-center"></h3>
      <%= bar_chart current_user.rounds.group(:course).average(:score), colors: ["#9C0808"], xtitle: "Time", ytitle: "Population" %>
      <br />
    </div>
  </div>

<br class="clr" />

<div class="leaderboard-show col-xs-10 col-xs-offset-1">
  <div class="col-xs-12 text-center">
    <h1 class="text-center">Greens Hit</h1>
    --------------
    <br />
  </div>

  <p class="text-center big-score"><%= current_user.greens_hit_average_rounded %> %</p>

    <div class="col-sm-6">
